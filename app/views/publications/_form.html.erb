<%= form_with(model: publication) do |form| %>
  <% if publication.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(publication.errors.count, "error") %> prohibited this publication from being saved:</h2>

      <ul>
        <% publication.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :route, style: "display: block" %>
    <%= form.text_field :route %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>

  <div>
    <% @var = current_user.try(:id) %>
    <% form.label :user_id, style: "display: block" %>
    <%= form.hidden_field :user_id, value: @var %>
  </div>

  <div>
    <%= form.label :photos, style: "display: block" %>
    <%= form.file_field :photo %>
  </div>
  <%= form.fields_for :labels do | etiqueta | %>
      <div class="labels_fields">
        <div class="fields">
            <%= etiqueta.label :title, "Etiqueta" %><br>
            <%= etiqueta.text_field :contact  %>
            <%= etiqueta.check_box :_destroy %>
            <%= etiqueta.label :_destroy, "Borrar",data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
